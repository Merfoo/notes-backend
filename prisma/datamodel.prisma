type User {
    id: ID! @id
    createdAt: DateTime! @createdAt
    email: String! @unique
    username: String! @unique
    password: String!
    notes: [Note!]!
    passwordResets: [PasswordReset!]!
}

type Note {
    id: ID! @id
    createdAt: DateTime! @createdAt
    createdBy: User! @relation(link: INLINE)
    titleId: String! @unique
    title: String!
    body: String!
}

type PasswordReset {
    id: ID! @id
    resetId: String! @unique
    user: User! @relation(link: INLINE)
    expireDate: DateTime!
}
